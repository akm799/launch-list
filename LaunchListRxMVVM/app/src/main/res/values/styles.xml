<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LaunchText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="LaunchText.Bold" parent="LaunchText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LaunchText.Title" parent="LaunchText.Bold">
        <item name="android:textSize">@dimen/listTitleTextSize</item>
    </style>

    <style name="LaunchText.Name" parent="LaunchText.Bold">
        <item name="android:textSize">@dimen/missionNameTextSize</item>
    </style>

    <style name="LaunchText.Attribute" parent="LaunchText">
        <item name="android:textSize">@dimen/missionAttributeTextSize</item>
    </style>

    <style name="LaunchText.Error" parent="LaunchText">
        <item name="android:textColor">@color/errorRed</item>
    </style>

    <style name="LaunchText.Link" parent="LaunchText">
        <item name="android:textColor">@color/linkBlue</item>
    </style>

</resources>
